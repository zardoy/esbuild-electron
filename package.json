{
    "name": "esbuild-electron",
    "version": "0.0.0-dev",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "description": "Fast and flexible Electron build tool powered by esbuild. Features hot-reload, production builds, and easy configuration.",
    "keywords": [
        "electron",
        "esbuild",
        "build",
        "builder",
        "electron-forge",
        "electron-builder",
        "development",
        "hot-reload",
        "typescript"
    ],
    "license": "MIT",
    "files": [
        "build"
    ],
    "bin": {
        "electron-esbuild": "build/bin.js"
    },
    "scripts": {
        "prepublishOnly": "tsc",
        "watch": "tsc -w",
        "see-local": "cd example/withoutConfig && node ../../build/bin.js --debug",
        "see-local-with-config": "cd example/withConfig && node ../../build/bin.js --debug",
        "lint": "eslint src/**"
    },
    "release": {
        "initialVersion": {
            "version": "0.1.0"
        }
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@zardoy/tsconfig": "^1.2.1",
        "electron": "^22.0.0",
        "esbuild": "^0.25.9",
        "eslint": "^8.18.0",
        "eslint-config-zardoy": "^0.2.11",
        "modify-json-file": "^1.1.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "chalk": "^5.2.0",
        "electron-is-dev": "^2.0.0",
        "electron-run": "2.3.1",
        "execa": "^5.1.1",
        "exit-hook": "^3.1.4",
        "github-remote-info": "^1.0.2",
        "lilconfig": "^2.0.5",
        "rambda": "^7.1.4"
    },
    "peerDependencies": {
        "electron": "*",
        "esbuild": "*"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160
    }
}
